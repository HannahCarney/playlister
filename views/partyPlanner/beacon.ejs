<h1>Please register your party beacon</h1>

<% if (errorID == 1) { %>
  <p>You need to enter a beacon</p>
<% } %>

  <form action="/partyplanner/beacon/<%-spotifyID %>" method="post" id="beacon-details-form">
    <input type="hidden" name="spotifyID" id="spotifyID">
    <label for="beaconMajor">Beacon (major)</label>
    <input name="beaconMajor" type="text">
    <label for="beaconMinor">Beacon (minor)</label>
    <input name="beaconMinor" type="text">
    <input type="submit" value="Save">
  </form>
